    <header><h2>Exercício 3<br>Praticando HTML, CSS e JavaScript</h2></header>
    <form>
        <h1>Bem vindo!</h1>
        <label>Digite seu nome:<br><input type="text" id="nome" placeholder="Seu nome"></label>
        <button type="button" onclick="mostrarNome()">Clique aqui</button>
        <p id="mensagem"><br></p>
    </form>
<script>
function mostrarNome() {
    const nome = document.getElementById("nome").value.trim();
    const mensagem = document.getElementById("mensagem");

    if (nome === "") {
        mensagem.textContent = "Por favor, insira seu nome.";} else {
        mensagem.textContent = `Olá, ${nome}! Seja bem-vindo à página do aluno(a).`;}
}
</script>
