<body>
    <header><h2>Exercício 3<br>Praticando HTML, CSS e JavaScript</h2></header>
    <form>
        <h1>Gerador de Lista</h1>
        <input type="text" id="itens" placeholder="Digite a quantidade de itens">
        <button type="button" onclick="gerarLista()">Gerar Lista</button>
        <p id="mensagem"><br></p>
        <ul id="lista"></ul>
    </form>
<script>
    function gerarLista() {
      const input = document.getElementById("itens");
      const mensagem = document.getElementById("mensagem");
      const lista = document.getElementById("lista");

      const valor = parseInt(input.value);
      lista.innerHTML = "";
      mensagem.textContent = "";

      if (isNaN(valor) || valor <= 0) {
        mensagem.textContent = "Por favor, insira um número válido.";
        return;
      }

      for (let i = 1; i <= valor; i++) {
        const li = document.createElement("li");
        li.textContent = `Octavio Marques ${i}`;
        lista.appendChild(li);
      }

      mensagem.textContent = "";
    }
  </script>
